extends layout

block content
    h1 Register
    form(name="register" action="/apis/register" method="post")
        div(style="width:20%")
            table
                tr
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        label Username
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        input(type="text" name="user")
                tr
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        label Password
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        input(type="password" name="pwd")
                tr
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        label Email
                    td(style="padding-top:1.5em; padding-right:1.5em")
                        input(type="text" name="email")
            p
                input(style="float:right" type="submit" value="Sign up")
